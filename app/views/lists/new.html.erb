<h1>新規投稿</h1>
<!--form with を使ってデータベースに打ち込む形をviewできるようにする-->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>

 <h4>タイトル</h4>
 <%= f.text_field :title %>
 
 <h4>本文</h4>
 <%= f.text_area :body %>
 
  <!-- 画像添付のための追加部分 -->
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
 
 <%= f.submit '投稿' %>
<% end %>